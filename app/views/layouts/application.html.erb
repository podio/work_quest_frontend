<!DOCTYPE html>
<html>
<head>
  <title>WorkQuest</title>
  <%= stylesheet_link_tag 'base', :media => 'all' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class="page">
    <div class="header">
      <div class="inner">
        <%= link_to image_tag('headerlogo.png'), root_path %>
        <ul class="links">
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <li><%= link_to 'Profile', edit_user_path %></li>
          <li><%= link_to 'Settings', edit_settings_path %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path %></li>
        </ul>
      </div>
    </div>

    <div class="flash">
      <%= show_flash_messages(flash) %>
    </div>

    <div class="content">
      <div class="inner">
        <%= yield %>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
    
    <div class="clear"></div>
  </div>

  <div class="clear"></div>
</body>
</html>
